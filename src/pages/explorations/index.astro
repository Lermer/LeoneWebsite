---
import { buildGraphData } from '../../utils/graphData';

const graphData = await buildGraphData();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Explorations - Mind Map</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      overflow: hidden;
      background-color: white;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    #graph-container {
      width: 100vw;
      height: 100vh;
    }

    .node {
      cursor: pointer;
      transition: fill 0.2s ease;
    }

    .node.exists {
      fill: #000000;
    }

    .node.missing {
      fill: #999999;
    }

    .node.selected {
      fill: #4169E1 !important; /* Royal blue */
    }

    .link {
      stroke: #999999;
      stroke-width: 1.5px;
      stroke-opacity: 0.6;
    }

    .link.selected {
      stroke: #4169E1; /* Royal blue */
      stroke-opacity: 1;
    }

    .label {
      font-size: 12px;
      fill: #333333;
      text-anchor: middle;
      pointer-events: none;
      user-select: none;
    }
  </style>
</head>
<body>
  <div id="graph-container"></div>

  <script type="module" define:vars={{ graphData }} is:inline>
    import * as d3 from 'https://cdn.jsdelivr.net/npm/d3@7/+esm';

    console.log('Graph data:', graphData);

    const width = window.innerWidth;
    const height = window.innerHeight;

    // Create SVG
    const svg = d3.select('#graph-container')
      .append('svg')
      .attr('width', width)
      .attr('height', height);

    // Create container for zoom
    const g = svg.append('g');

    // Create groups for links and nodes (links first so they render behind)
    const linkGroup = g.append('g').attr('class', 'links');
    const nodeGroupContainer = g.append('g').attr('class', 'nodes');

    // Create zoom behavior
    const zoom = d3.zoom()
      .scaleExtent([0.1, 4])
      .on('zoom', (event) => {
        g.attr('transform', event.transform);
      });

    svg.call(zoom);

    // Create force simulation with smoother settings
    const simulation = d3.forceSimulation(graphData.nodes)
      .force('link', d3.forceLink(graphData.links)
        .id(d => d.id)
        .distance(150))
      .force('charge', d3.forceManyBody().strength(-400))
      .force('center', d3.forceCenter(width / 2, height / 2))
      .force('collision', d3.forceCollide().radius(60))
      .alphaDecay(0.01)
      .velocityDecay(0.4);

    // Create links
    const link = linkGroup
      .selectAll('line')
      .data(graphData.links)
      .join('line')
      .attr('class', 'link')
      .attr('stroke', '#999999')
      .attr('stroke-width', 1.5)
      .attr('stroke-opacity', 0.6);

    // Create node groups
    const nodeGroup = nodeGroupContainer
      .selectAll('g')
      .data(graphData.nodes)
      .join('g')
      .attr('class', 'node-group');

    // Add circles to nodes
    const node = nodeGroup.append('circle')
      .attr('r', 8)
      .attr('fill', d => d.exists ? '#000000' : '#999999')
      .attr('cursor', 'pointer')
      .call(d3.drag()
        .on('start', dragstarted)
        .on('drag', dragged)
        .on('end', dragended));

    // Add labels below nodes
    nodeGroup.append('text')
      .attr('class', 'label')
      .attr('dy', 20)
      .attr('text-anchor', 'middle')
      .attr('font-size', '12px')
      .attr('fill', '#333333')
      .attr('pointer-events', 'none')
      .text(d => d.label);

    // Click interaction
    let selectedNode = null;

    nodeGroup.on('click', function(event, d) {
      event.stopPropagation();

      if (selectedNode === d.id) {
        // Deselect if clicking the same node
        selectedNode = null;
        node.attr('fill', nd => nd.exists ? '#000000' : '#999999');
        link.attr('stroke', '#999999').attr('stroke-opacity', 0.6);
      } else {
        // Select new node
        selectedNode = d.id;

        // Update node colors
        node.attr('fill', nd => {
          if (nd.id === d.id) return '#4169E1'; // Royal blue for selected
          return nd.exists ? '#000000' : '#999999'; // Default colors
        });

        // Update link colors
        link.attr('stroke', l => {
          const sourceId = typeof l.source === 'object' ? l.source.id : l.source;
          const targetId = typeof l.target === 'object' ? l.target.id : l.target;
          return (sourceId === d.id || targetId === d.id) ? '#4169E1' : '#999999';
        })
        .attr('stroke-opacity', l => {
          const sourceId = typeof l.source === 'object' ? l.source.id : l.source;
          const targetId = typeof l.target === 'object' ? l.target.id : l.target;
          return (sourceId === d.id || targetId === d.id) ? 1 : 0.6;
        });
      }
    });

    // Click on background to deselect
    svg.on('click', () => {
      selectedNode = null;
      node.attr('fill', d => d.exists ? '#000000' : '#999999');
      link.attr('stroke', '#999999').attr('stroke-opacity', 0.6);
    });

    // Update positions on tick
    simulation.on('tick', () => {
      link
        .attr('x1', d => d.source.x)
        .attr('y1', d => d.source.y)
        .attr('x2', d => d.target.x)
        .attr('y2', d => d.target.y);

      nodeGroup
        .attr('transform', d => `translate(${d.x},${d.y})`);
    });

    // Drag functions - stop simulation during drag for zero jitter
    function dragstarted(event, d) {
      // Stop the simulation completely during drag
      simulation.stop();
      d.fx = d.x;
      d.fy = d.y;
    }

    function dragged(event, d) {
      d.fx = event.x;
      d.fy = event.y;

      // Manually update positions during drag
      nodeGroup
        .filter(nd => nd.id === d.id)
        .attr('transform', `translate(${event.x},${event.y})`);

      // Update connected links
      link
        .attr('x1', l => l.source.id === d.id ? event.x : l.source.x)
        .attr('y1', l => l.source.id === d.id ? event.y : l.source.y)
        .attr('x2', l => l.target.id === d.id ? event.x : l.target.x)
        .attr('y2', l => l.target.id === d.id ? event.y : l.target.y);
    }

    function dragended(event, d) {
      d.fx = null;
      d.fy = null;
      // Restart simulation after drag with gentle warming
      simulation.alpha(0.3).restart();
    }

    // Handle window resize
    window.addEventListener('resize', () => {
      const newWidth = window.innerWidth;
      const newHeight = window.innerHeight;

      svg.attr('width', newWidth).attr('height', newHeight);
      simulation.force('center', d3.forceCenter(newWidth / 2, newHeight / 2));
      simulation.alpha(0.3).restart();
    });
  </script>
</body>
</html>
