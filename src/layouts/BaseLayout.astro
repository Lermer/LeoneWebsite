---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Leone Ermer Website' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/projects">Projects</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Leone Ermer. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  header {
    padding: 1rem;
    border-bottom: 1px solid #eee;
  }

  nav {
    display: flex;
    gap: 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  nav a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
  }

  nav a:hover {
    color: #0066cc;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: calc(100vh - 200px);
  }

  footer {
    padding: 2rem 1rem;
    text-align: center;
    border-top: 1px solid #eee;
    color: #666;
  }
</style>
